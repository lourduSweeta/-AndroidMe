<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!-- Linear layout for holding three images -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@android:color/white"
                      android:paddingBottom="16dp"
                      android:paddingTop="16dp"
                      android:paddingLeft="16dp"
                      android:paddingRight="16dp">
            <!-- (4) : create a container to hold the head BodyPartFragment of the custom Android-->
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="180dp"
                         android:id="@+id/head_container"
            />
            <!-- (6) : create a container to hold the body BodyPartFragment of the custom Android-->
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="180dp"
                         android:id="@+id/body_container"
            />
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="180dp"
                         android:id="@+id/leg_container"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>